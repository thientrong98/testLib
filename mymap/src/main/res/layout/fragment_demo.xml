<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4EE1B7"
        >

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />



            <!--        <ImageButton-->

            <!--            android:scaleType="fitXY"-->
            <!--            android:layout_width="45dp"-->
            <!--            android:layout_height="45dp"-->
            <!--            android:layout_gravity="top"-->
            <!--            android:background="@drawable/new_bg_map"-->
            <!--            android:src="@drawable/backgound_map"-->
            <!--            />-->
        <ImageButton
            android:id="@+id/btn_background_map"
            android:scaleType="fitXY"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/new_bg_map"
            android:src="@drawable/backgound_map"
            android:layout_marginTop="30dp"
            android:layout_marginRight="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
            <ImageButton
                android:id="@+id/btn_location"
                android:scaleType="fitXY"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/new_bg_gps"
                android:src="@drawable/gps"
                android:layout_marginRight="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_background_map"
                />
            <ImageButton
                android:id="@+id/btn_transparent"
                android:scaleType="fitXY"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/new_bg_transparent"
                android:src="@drawable/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_location"
                />

        <Button
            android:id="@+id/btn_giay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="giay"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_so"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="so"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_nen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nen"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
           />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>